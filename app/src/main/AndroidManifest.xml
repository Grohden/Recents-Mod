<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="grohden.recentsmod" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="xposedmodule"
            android:value="true" />
        <meta-data
            android:name="xposeddescription"
            android:value="Manipulate Recents layout" />
        <meta-data
            android:name="xposedminversion"
            android:value="30" />

        <activity
            android:name=".ModuleActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ColorPickerActivity"
            android:label="@string/title_activity_color_picker" >
        </activity>
        <activity
            android:name=".test.MultipleItensActivity"
            android:label="@string/title_activity_multiple_itens" >
        </activity>
    </application>

</manifest>
