<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    tools:context="com.rohden.recentsapp.MainActivity"
    android:layout_width="fill_parent"
    android:layout_marginTop="0dp"
    android:layout_height="fill_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/clock_text"
                android:layout_marginTop="15dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="@string/text_in_clock" />
            <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/sysui"
                android:background="@color/pink_seven"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/restart_systemUI" />
        </LinearLayout>

        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:hint="@string/thumbnail_size"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <com.gc.materialdesign.views.Slider
                android:id="@+id/recent_width"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/pink_tree"
                materialdesign:max="400"
                materialdesign:min="100"
                materialdesign:showNumberIndicator="true"/>
            <com.gc.materialdesign.views.Slider
                android:id="@+id/recent_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/pink_tree"
                materialdesign:max="400"
                materialdesign:min="100"
                materialdesign:showNumberIndicator="true"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/apply"
                android:layout_centerInParent="true"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@color/pink_seven"
                android:text="@string/apply" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:id="@+id/square"
                android:animateLayoutChanges="true"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/thumbnail_width"
                android:layout_height="@dimen/thumbnail_height"
                android:background="#55000000" />
            <TextView
                android:layout_below="@+id/square"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/preview"/>
        </RelativeLayout>
        </LinearLayout>
</LinearLayout>